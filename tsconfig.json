{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@api-surface/types": ["./packages/types/src"],
      "@api-surface/core": ["./packages/core/src"],
      "@api-surface/nextjs": ["./packages/nextjs/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
